<h2>Show Trend</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @trend.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @trend.description |> Earmark.as_html! |> raw %>
  </li>

</ul>

<span><%= link "Edit", to: trend_path(@conn, :edit, @trend) %></span>
<span><%= link "Back", to: trend_path(@conn, :index) %></span>
